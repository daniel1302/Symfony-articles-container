{% extends "AppBundle:Layout:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/app/css/pages/test.css') }}"/>
{% endblock %}

{% block content %}



    <div id="legend">
        <legend class="">
            Ranking użytkowników
        </legend>
    </div>
    <a href="{{ path('test_index') }}">... powrót do listy testów</a><br><br>

    <div>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Liczba zdobytych punktów</th>
                </tr>
            </thead>
            <tbody>

            {% set counter = 1 %}
            {% for account in accounts %}
                <tr>
                    <td>{{ counter }}</td>
                    <td>{{ account.firstname }}</td>
                    <td>{{ account.surname }}</td>
                    <td>{{ account.points|default(0) }}</td>
                </tr>
                {% set counter = counter + 1 %}
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}