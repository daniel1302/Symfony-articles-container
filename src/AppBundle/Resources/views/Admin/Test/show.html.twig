{% extends "AppBundle:Layout:admin.html.twig" %}


{% block contentTitle %}PodglÄ…d testu{% endblock %}

{% block content %}
    <h1>Test</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ test.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ test.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ test.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ test.description }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if test.start %}{{ test.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if test.created %}{{ test.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if test.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>

        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% block contentFooter %}
    <ul>
        <li>
            <a href="{{ path('admin_test_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_test_edit', { 'id': test.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
